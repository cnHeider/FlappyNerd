<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:orientation="vertical"
    android:background="@mipmap/background"
    tools:context="com.example.heider.flappynerd.MainActivity">

    <ImageButton
        android:layout_marginTop="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageButtonLogo2"
        android:background="@mipmap/logo12"
        android:layout_gravity="center_horizontal" />

    <ImageView
        android:layout_marginTop="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageView2"
        android:layout_gravity="center_horizontal"
        android:background="@mipmap/logotext" />

    <TextView
        android:layout_marginTop="30dp"
        android:textSize="40sp"
        android:singleLine="true"
        android:layout_width="240dp"
        android:layout_height="wrap_content"
        android:id="@+id/textView_NerdName"
        android:textColor="#FFFFFF"
        android:layout_gravity="center_horizontal" />

    <TextView android:layout_marginTop="30dp" android:textSize="40sp" android:singleLine="true"
              android:layout_width="240dp" android:layout_height="wrap_content" android:id="@+id/textView_GamePin"
              android:textColor="#FFFFFF" android:layout_gravity="center_horizontal"/>
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:scaleType="centerInside"
        android:scaleX="0.7"
        android:scaleY="0.7"
        android:id="@+id/imageView3"
        android:layout_gravity="center_horizontal"
        android:background="@mipmap/animation"
        android:longClickable="false" />

</LinearLayout>
